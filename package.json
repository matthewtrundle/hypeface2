{
  "name": "hyperliquid-trading-bot",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:all": "cd apps/api && npm run build && cd ../dashboard && npm run build",
    "start": "turbo run start",
    "start:prod": "cd apps/api && npm run start",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "dev:api": "npm run dev --workspace=@hype/api",
    "dev:dashboard": "npm run dev --workspace=@hype/dashboard",
    "db:migrate": "npm run db:migrate --workspace=@hype/api",
    "db:generate": "npm run db:generate --workspace=@hype/api",
    "db:studio": "npm run db:studio --workspace=@hype/api",
    "railway:deploy": "railway up"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
