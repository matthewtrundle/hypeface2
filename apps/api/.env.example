# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/hyperliquid_bot"
REDIS_URL="redis://localhost:6379"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-this"
MASTER_ENCRYPTION_KEY="your-32-character-encryption-key"
WEBHOOK_SECRET="your-webhook-secret-from-tradingview"

# Hyperliquid
HYPERLIQUID_API_URL="https://api.hyperliquid-testnet.xyz"
HYPERLIQUID_MAINNET_URL="https://api.hyperliquid.xyz"

# Wallet
WALLET_PUBLIC_KEY="0x0000000000000000000000000000000000000000"
WALLET_PRIVATE_KEY="encrypted-private-key-placeholder"

# Application
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# Trading Configuration - Basic
POSITION_SIZE_PERCENTAGE=10
MAX_LEVERAGE=10
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# Pyramid Trading Configuration
# Style options: 'increasing', 'decreasing', 'equal', 'conservative', 'custom'
PYRAMID_STYLE=increasing
ENABLE_PYRAMIDING=true
MAX_PYRAMID_LEVELS=4

# Custom pyramid settings (only used when PYRAMID_STYLE=custom)
PYRAMID_ENTRY_PERCENTAGES=15,25,30,30
PYRAMID_EXIT_PERCENTAGES=25,25,25,25
PYRAMID_LEVERAGE_LEVELS=4,6,8,10

# Pyramid Style Presets:
#
# 'increasing' (default - conservative start, scale up):
#   Entry: 15%, 25%, 30%, 30% | Exit: 25%, 25%, 25%, 25% | Leverage: 4x, 6x, 8x, 10x
#
# 'decreasing' (aggressive start, reduce risk):
#   Entry: 40%, 30%, 20%, 10% | Exit: 40%, 30%, 20%, 10% | Leverage: 10x, 8x, 6x, 4x
#
# 'equal' (balanced approach):
#   Entry: 25%, 25%, 25%, 25% | Exit: 25%, 25%, 25%, 25% | Leverage: 7x, 7x, 7x, 7x
#
# 'conservative' (very safe, gradual build):
#   Entry: 10%, 15%, 20%, 25% | Exit: 25%, 25%, 25%, 25% | Leverage: 3x, 4x, 5x, 6x

# Risk Management
MAX_DRAWDOWN_PERCENTAGE=15
TRAILING_STOP_PERCENTAGE=10
TIME_STOP_HOURS=48

# Monitoring
LOG_LEVEL="info"